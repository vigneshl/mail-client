{
  "extends": [
    "airbnb",
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": "off",
    "quotes": ["error", "single"],
    "import/extensions": "off",
    "react/jsx-indent": ["error", 4],
    "react/prefer-stateless-function": "off"
  }
}
